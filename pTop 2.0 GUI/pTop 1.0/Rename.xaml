<Window x:Class="pTop.Rename"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="pTop-Task Rename" Height="100" Width="380">
    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0,0,0">
            <Label VerticalAlignment="Center" HorizontalAlignment="Right" >Task Name: </Label>
            <TextBox Name="TaskReName" Width="180" VerticalAlignment="Center" Margin="15,0,15,0"
                     PreviewKeyDown="Save_NewName">
                
            </TextBox>
            <Button Width="65" Click="SaveNewName">OK</Button>
        </StackPanel>
    </Grid>
</Window>
