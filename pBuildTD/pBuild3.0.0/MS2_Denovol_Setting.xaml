<Window x:Class="pBuild.MS2_Denovol_Setting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MS2_Denovol_Setting" Height="300" Width="300" Icon="pBuild.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Margin="4">N-term Color: </TextBlock>
        <Button x:Name="N_btn" Margin="4" Grid.Row="0" Grid.Column="1" Click="sel_Color">Color</Button>
        <TextBlock Grid.Row="1" Grid.Column="0" Margin="4">C-term Color: </TextBlock>
        <Button x:Name="C_btn" Margin="4" Grid.Row="1" Grid.Column="1" Click="sel_Color">Color</Button>
        <TextBlock Grid.Row="2" Grid.Column="0" Margin="4">Any where Color: </TextBlock>
        <Button x:Name="A_btn" Margin="4" Grid.Row="2" Grid.Column="1" Click="sel_Color">Color</Button>
        <Button Margin="4" Grid.Row="3" Grid.Column="1" Click="update_btn_clk">Update</Button>
    </Grid>
</Window>
