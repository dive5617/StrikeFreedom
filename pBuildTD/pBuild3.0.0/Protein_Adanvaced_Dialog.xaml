<Window x:Class="pBuild.Protein_Adanvaced_Dialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Protein_Adanvaced_Dialog" Height="300" Width="360" Icon="pBuild.ico" ResizeMode="NoResize" Closed="closed_event"
        Left="100" Top="100">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Margin="10" Grid.Row="0" Grid.Column="0">Number of amino acids in one row:</TextBlock>
        <TextBox Margin="10" x:Name="alphabet_txt" Grid.Row="0" Grid.Column="1" Width="100"></TextBox>
        <Button Margin="10" Grid.Row="1" Grid.Column="1" Click="update_clk">Update</Button>
    </Grid>
</Window>
