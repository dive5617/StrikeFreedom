<Window x:Class="pConfig.Quantification_Edit_Dialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quantification Information" Height="350" Width="440" Icon="images\pConfig.ico" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition/>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <TextBlock HorizontalAlignment="Left" Margin="63,17,0,0" Padding="3" Height="22" TextWrapping="Wrap" Text="Name:" VerticalAlignment="Top"/>
            <TextBox x:Name="name_txt" HorizontalAlignment="Left" Height="22" Margin="115,17,0,0" VerticalAlignment="Top" Width="159"/>
            <TextBlock HorizontalAlignment="Left" Margin="39,50,0,-24" Padding="3" TextWrapping="Wrap" Text="Add Label:" Height="22"/>
            <Button x:Name="add_btn" Content="+" HorizontalAlignment="Left" Height="22" Margin="115,50,0,-24" VerticalAlignment="Top" Width="40" Click="Add_btn_clk"/>
        </Grid>
        <Grid x:Name="grid" Grid.Row="1" Margin="0,34,0,5"/>
        <Button Grid.Row="2" Content="Apply" HorizontalAlignment="Left" Margin="191,0,5,5" VerticalAlignment="Top" Width="75" Height="22" Click="Apply_btn_clk"/>

    </Grid>
</Window>
