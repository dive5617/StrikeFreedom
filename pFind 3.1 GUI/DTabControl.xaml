                                                <DoubleAnimation 
                                                Storyboard.TargetName="hoverShape"
                                                Storyboard.TargetProperty="Opacity"
                                                To="1"
                                                Duration="0:0:0.1" />
                                            </Storyboard>
                                        </VisualState>
                                        <VisualState Name="Normal">
                                            <Storyboard>
                                                <DoubleAnimation 
                                                Storyboard.TargetName="hoverShape"
                                                Storyboard.TargetProperty="Opacity"
